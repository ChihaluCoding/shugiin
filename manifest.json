{
  "manifest_version": 3,
  "name": "衆議院サイト モダナイザー",
  "version": "1.0.0",
  "description": "衆議院サイトを現代的なデザインに変更する拡張機能",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.shugiin.go.jp/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "衆議院サイト モダナイザー"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://www.shugiin.go.jp/*"]
    }
  ]
}